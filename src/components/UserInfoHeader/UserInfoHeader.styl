.user-info-header {
  height 9rem
  flex-shrink 0
  background-image url('../../assets/user_info_bg.png')
  background-size cover
  display flex
  flex-direction column
  justify-content center
}

.nickname {
  font-size: 1rem
  color #fff
  text-align center
}

.head-img {
  width 3rem
  height 3rem
  border-radius 1.5rem
  margin auto
}

.comment-ticket-count {
  font-size 0
  color #fff
  display flex
  flex-direction row
  justify-content center
  > * {
    display inline-block
    height 3rem
  }
  > .devider {
    width 3px
    transform scale(0.33333333)
    background-color: #fff
    margin 0 1rem
  }
  > .comment-count, > .ticket-count {
    font-size 0.6rem
    display flex
    flex-direction column
    justify-content center
    .number {
      text-align center  
    }
  }
}