.result-container {
  display flex
  flex-direction column
  height 100%
  padding-top 4rem
  box-sizing border-box
  .image {
    img {
      display: block;
      width: auto;
      height: 7.623rem;
      margin: 1rem auto 2rem;
    }
  }
  .text {
    flex-grow 2
    text-align center
    h1 {
      margin: 0;
      font-size: .85rem;
      color: #ffac00;
      font-weight: 500;
    }
    p {
      font-size: .6rem;
      color: #717171;
    }
  }
  .buttons {
    flex-grow 3
    button {
      flex-grow: 1;
      display: block;
      width: 8rem;
      height: 2rem;
      border-radius: 1rem;
      border: none;
      margin: auto;
      font-size: .9rem;
      color: #fff;
      background-color: #ffac00;
      box-shadow: 0 0 0.5rem 0.05rem rgba(215,142,37,.4);
    }
    a {
      font-size: .8rem;
      color: #717171;
      text-align: center;
      width: 5rem;
      display: block;
      margin: 1rem auto;
    }
  }
}