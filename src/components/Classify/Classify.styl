.classify-grow {
  overflow hidden
  display flex
  flex-direction column
  justify-content top
  padding 1rem 0
  min-height 11rem
  .types-in-line {
    display flex
    flex-direction row
    justify-content center
  }
}

.shop-types-splitter {
  width 1px
  margin auto 0.8rem
  background-color #bbbbbb
  height 2rem
}

.link-with-shop {
  text-align center
  font-size 0.6rem
  font-weight 800
  text-decoration none
  color #2e2e2e
  padding 0.3rem
  margin auto 0
  .bg-element {
    content ''
    display block
    width 3.652rem
    height 4rem
    margin 0 auto
    background-image url('../../assets/types.png')
    background-size auto 4rem
    transform scale(0.9)
  }
  .title {
    // margin-top 6px
    width 4rem
    display block
  }
}

