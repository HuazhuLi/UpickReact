.global-alarm {
  height: 3rem;
  width: 100%;
  position: fixed;
  z-index: 99999;
  top: 0;
  left: 0;
  opacity: 0;
  transform: translateY(-100%);
  transition: opacity 0.5s, transform 0.5s
  p {
    color: #FFFFFF;
    font-size: 1rem;
    text-align: center;
    margin: 0;
    line-height: 3rem;
  }
  &.show {
    opacity: 1;
    transform: translateY(0);
  }
}