.wave-image {
  width 100%
  height auto
}

.h1-with-Logo {
  background-image: url('../../assets/logo.png');
  background-repeat: no-repeat;
  background-position: center;
  background-size: auto 100%;
  position: absolute;
  text-align: center;
  width: 100%;
  height: 2.4rem;
  margin: 0;
  top: 1.2rem;
}


.slogan {
  margin: 0;
  margin-bottom: 1rem;
  font-size: 12.5px;
  font-weight: 600;
  color: #535353;
  text-align: center;
  position: relative;
  &:after, &:before {
    background-size: 100%;
    margin: 0 0.5rem;
  }
  &:before {
    content: '';
    position: relative;
    display: inline-block;
    width: 1rem;
    height: 1rem;
    background-image: url('../../assets/quote.png');
    transform: rotateY(180deg) scale(0.65);
  }
  &:after {
    content: '';
    position: relative;
    display: inline-block;
    width: 1rem;
    height: 1rem;
    background-image: url('../../assets/quote.png');
    transform: scale(0.65);
  }
}

.entry-header-no-grow {
  flex-shrink 0
  flex-grow 0
  overflow hidden
}