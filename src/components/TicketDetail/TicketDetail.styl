.root {
  flex-grow: 1
  display: flex
  flex-direction: column
  justify-content: center
  background-color: #E1B171
  .detail {
    background-color: #F1F1F1
    width: 80%
    margin: 0 auto
  }

  .code {
    width: 80%
    margin: 0 auto      
  }  
}


.detail {
  background-image: url("data:image/svg+xml;utf8,<svg width='150' height='50' xmlns='http://www.w3.org/2000/svg'><text dominant-baseline='hanging' y='-12' x='-12' font-size='50' fill='#E6E6E6' font-family='arial, sans-serif' font-weight='bold'>Upick</text></svg>")
  background-position: 0px 50px
  background-size: 100% auto
  background-repeat: no-repeat

  border-top-left-radius: 10px
  border-top-right-radius: 10px
  .logo {
    width: 4rem
    height: 4rem

    margin: 1rem auto

    background-position: center
    background-size: 100% 100%

    border-radius: 4px

    // box-shadow: rgba(143,143,143,0.2) 2px 2px 12px 0px
  }

  .title {
    margin: 0
    font-size: 1.5rem
    font-weight: normal

    text-align: center
    color: #1F1F1F
  }

  .duration {
    font-size: 0.8rem
  }

  .discount {
    font-size: 0.85rem
    margin-left: 1rem
    margin-right: 1rem
  }

  .title, .duration , .discount {
    text-align: center
    color: #4E4E4E
  }

  > *:last-child {
    margin-bottom: 0
  } 
}

.code {
  position: relative
  img {
    width: 100%
    height: auto
  }
  .number {
    position: absolute
    top: 0
    bottom: 1rem
    left: 0
    right: 0

    text-align: center

    margin: auto

    height: 2rem
    line-height: 2rem

    color: #232323

    font-weight: normal
  }
}