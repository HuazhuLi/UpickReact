.top-bar {
  height (h = 2.8)rem
  display flex
  border-bottom 1px #f2f2f2 solid
  background-color #FFF
  h1 {
    margin auto 1.5rem
    flex-grow 1
    font-size 0.9rem
    line-height 1rem
    height 1rem
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  h1:before {
    content ''
    display inline-block
    margin-right 0.6rem
    width 1rem
    height @width
    background-image url('../../assets/round.png')
    background-size auto 70%
    background-position center
    background-repeat no-repeat
    vertical-align top
  }
  button {
    border none
    width 2.8rem
    background-color #FFAC00
    height (bh = 1.4)rem
    margin ((h - bh) / 2)rem
    border-radius (bh / 2)rem
    font-size 0.7rem
    color #FFFFFF
  }
}